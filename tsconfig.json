{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@modules": ["src/modules"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@guards/*": ["src/guards/*"],
      "@guards": ["src/guards"],
      "@entities/*": ["src/entities/*"],
      "@entities": ["src/entities"],
      "@dtos/*": ["src/dtos/*"],
      "@dtos": ["src/dtos"]
    }
  }
}
